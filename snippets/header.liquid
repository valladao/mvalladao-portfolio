<header style="
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    margin: auto;
    max-width: 110em;
">
  <div style="
    display: flex;
    justify-self: start;
    padding: 1em;
  ">
    {% render 'icons-logo' %}
    {% render 'component-animated-name' %}
  </div>
  <nav style="
    display: flex;
    justify-self: center;
    padding: 1em;
  ">
    {% for menu_item in menu_items %}
      <a
        href="/"
        style="
          padding: 0 1em;
        "
      >
        {{ menu_item.settings.heading }}
      </a>
    {% endfor %}
  </nav>
  <div style="
    display: flex;
    justify-self: end;
    padding: 1em;
  ">
    {% render 'icons-social-linkedin' %}
    {% render 'icons-social-github' %}
    {% render'icons-other-pdf' %}
    {% render 'icons-search' %}
  </div>
</header>
